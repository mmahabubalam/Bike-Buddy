<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Benelli"
    android:orientation="vertical"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="start"
            android:text="Benelli is an Italian motorcycle brand founded in 1911 by Teresa Benelli. With its headquarters in Pesaro, Italy, Benelli is celebrated for its long history of "
            android:textSize="16dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginRight="3dp"
            android:src="@drawable/benili" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="producing high-performance motorcycles that combine Italian craftsmanship with modern technology."
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bottom_curved"
        android:text="  Available Benelli  Bikes in Bangladesh:   "
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>