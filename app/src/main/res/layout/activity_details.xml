<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:layout_margin="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imgc"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Name: "
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/imgc"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Name Here"
            android:textSize="15sp"
            android:layout_below="@id/imgc"
            android:layout_toRightOf="@id/name_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/brand_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Brand: "
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#E6E6E6"
            />

        <TextView
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Band Here"
            android:textSize="15sp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/brand_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/type_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/brand_text"
            android:layout_marginTop="10dp"
            android:text="Category: "
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Sports"
            android:textSize="15sp"
            android:layout_below="@id/brand_text"
            android:layout_toRightOf="@id/type_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/engine_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/type"
            android:layout_marginTop="10dp"
            android:text="Engine: "
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/engine"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="155cc"
            android:textSize="15sp"
            android:layout_below="@id/type"
            android:layout_toRightOf="@id/engine_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/output_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/engine"
            android:layout_marginTop="10dp"
            android:text="Power and Torque: "
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="14.7"
            android:textSize="15sp"
            android:layout_below="@id/engine"
            android:layout_toRightOf="@id/output_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/milage_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/output_text"
            android:layout_marginTop="10dp"
            android:text="Milage "
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:background="#E6E6E6"
            />

        <TextView
            android:id="@+id/milage"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="14.7"
            android:textSize="15sp"
            android:layout_below="@id/output_text"
            android:layout_toRightOf="@id/milage_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tire_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/milage_text"
            android:layout_marginTop="10dp"
            android:text="Tire : "
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tire"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="14.7"
            android:textSize="15sp"
            android:layout_below="@id/milage_text"
            android:layout_toRightOf="@id/tire_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/abs_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/tire_text"
            android:layout_marginTop="10dp"
            android:text="ABS : "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#E6E6E6"
            />

        <TextView
            android:id="@+id/abs"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Yes"
            android:textSize="15sp"
            android:layout_below="@id/tire_text"
            android:layout_toRightOf="@id/abs_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/abs_text"
            android:layout_marginTop="10dp"
            android:text="price : "
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:background="#E6E6E6"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="5,25,000"
            android:textSize="15sp"
            android:layout_below="@id/abs_text"
            android:layout_toRightOf="@id/price_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/speed_text"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@id/price_text"
            android:layout_marginTop="10dp"
            android:text="Top speed : "
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#E6E6E6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="150kmph"
            android:textSize="15sp"
            android:layout_below="@id/price_text"
            android:layout_toRightOf="@id/speed_text"
            android:background="#E6E6E6"
            android:gravity="center"
            />




    </RelativeLayout>

</RelativeLayout>